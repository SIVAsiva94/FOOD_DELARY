<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paymet_metod">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#00000000"

            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Add a Payment method"
            android:textColor="@color/primary_color"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/paypal"
        android:text=" Paypal"
        android:textAllCaps="false"
        android:textAlignment="textStart"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/master"
        android:drawableRight="@drawable/ic_outline_check_box_24"
        android:text=" Master card"
        android:textAllCaps="false"
        android:textAlignment="textStart"/>
    <Button
        android:id="@+id/credit_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_outline_credit_card_24"
        android:text=" Credit card"
        android:textAllCaps="false"
        android:textAlignment="textStart"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="1dp"
        android:outlineSpotShadowColor="#00000000"
        android:outlineAmbientShadowColor="#00000000"

        android:background="#00000000"
        app:menu="@menu/bottom_navi_menu" />


</LinearLayout>