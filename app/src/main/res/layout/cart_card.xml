<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"

    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/cardradius"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="110dp"
            app:cardElevation = "16dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius = "10dp"
            android:layout_margin = "10dp"
            android:foregroundGravity = "center"
            android:layout_centerInParent = "true">
            <ImageView
                android:id="@+id/mycart_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/food"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/cart_name"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginTop="26dp"
                android:text="Chomeim"
                android:textStyle="bold"
                android:textColor="@color/textcolor"/>

            <TextView
                android:id="@+id/cart_weight"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_monitor_weight_24"
                android:text=" 500g"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cart_cost"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:text=" 50.00"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"

            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cart_delet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pluse"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_outline_delete_outline_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"

                android:drawableLeft="@drawable/ic_baseline_water_drop_24"
                android:text="60 Calories"
                android:textColor="@color/textcolor"/>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pluse">

                <ImageButton
                    android:id="@+id/cart_minus"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_marginBottom="30dp"
                    android:background="#00FF6F00"
                    android:src="@drawable/ic_baseline_minimize_24"/>

                <TextView

                    android:id="@+id/cart_quantity"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="0"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/cart_pluse"
                    android:layout_width="30dp"

                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:background="#00FF6F00"
                    android:src="@drawable/ic_baseline_add_24" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
