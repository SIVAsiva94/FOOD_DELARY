<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="1dp"
    app:cardCornerRadius="20dp"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/notimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/account_button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_outline_shopping_bag_24"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/notit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/notit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your order has delivered"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/notitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2m ago"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>