<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#00000000"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="1dp"
    app:cardCornerRadius="15dp"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="130dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="110dp"
            app:cardElevation = "16dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius = "10dp"
            android:layout_margin = "10dp"
            android:foregroundGravity = "center"
            android:layout_centerInParent = "true">
        <ImageView
            android:id="@+id/favimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/food"
            android:scaleType="fitXY"
            />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/favName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"

           android:layout_marginLeft="20dp"

            android:text="Burger"
            android:textColor="@color/textcolor"
            android:textSize="18dp"
            android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/heart1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                   android:layout_marginLeft="35dp"
                    android:background="@drawable/account_button"
                    android:src="@drawable/heart_svgrepo_com" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/favtype"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
            android:text="Double beef"
            android:textColor="@color/textcolor"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/favcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="18dp"
                android:text="50"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:textSize="18dp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/backroundwhite"
            android:src="@drawable/ic_baseline_add_circle_24" />




        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
         android:layout_marginLeft="60dp"
            android:background="@drawable/pluse">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="30dp"
                android:layout_height="17dp"
                android:layout_marginBottom="30dp"
                android:onClick="decrement"
                android:background="#00FF6F00"
                android:src="@drawable/ic_baseline_minimize_24" />

            <TextView
                android:id="@+id/addnumber"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="2"
                android:textColor="@color/primary_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/pluse"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="#00FF6F00"
                android:src="@drawable/ic_baseline_add_24" />
        </LinearLayout>
</LinearLayout>
        </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>