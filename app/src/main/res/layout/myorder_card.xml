<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="1dp"
    app:cardCornerRadius="20dp"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:cardElevation = "16dp"
            app:cardCornerRadius = "10dp"
            android:layout_margin = "5dp"

            android:layout_centerInParent = "true" >
        <ImageView
            android:id="@+id/orderimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/food"
            android:scaleType="fitXY"
           />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/order_Name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="70dp"

                    android:text="Burger"
                    android:textColor="@color/textcolor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/pluse">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="17dp"
                        android:layout_marginBottom="30dp"
                        android:background="#00FF6F00"
                        android:src="@drawable/ic_baseline_minimize_24" />

                    <TextView
                        android:id="@+id/addnumber"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="2"
                        android:textColor="@color/primary_color"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#00FF6F00"
                        android:src="@drawable/ic_baseline_add_24" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/heart1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/account_button"
                    android:src="@drawable/heart_svgrepo_com" />
            </LinearLayout>
            <TextView
                android:id="@+id/order_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="$50.00"
                android:textSize="18dp" />
            <Button
                android:layout_width="130dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:text="Reorder"
                android:textColor="@color/white"
                android:textAllCaps="false"/>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>