<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/backroundwhite"
    tools:context=".homepage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginTop="25dp">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"

        android:background="@drawable/linearlayoutcicular"
        android:layout_marginRight="0dp"

        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_outline_search_24"/>

        <EditText
            android:layout_width="180dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:hint="Search"
            android:background="@drawable/textinput"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/ic_outline_mic_none_24"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/notifiaction"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_outline_notifications_24"
        android:background="#00000000"/>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardrecyclerview"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="210dp">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:text="Categories"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/primary_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/all"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="All"
            android:textAllCaps="false"
            android:textColor="#e65100"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/popular"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="Popular"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/vegtarian"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="Vegetarian"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/italian"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="Italian"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/chines"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="Chines"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"/>




    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardrecyclerview1"
        android:layout_width="match_parent"
        android:layout_height="255dp">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:outlineSpotShadowColor="#00000000"
        android:outlineAmbientShadowColor="#00000000"

        android:background="#00000000"
        app:menu="@menu/bottom_navi_menu" />


</LinearLayout>